.page{
  width: 100%;
  height:100vh;
}
.all{
  position: relative;
  background-color: gainsboro;
  align-items: center;
  width:100%;
  height:70%;
}
.add{
  position: absolute;
  align-content: center;
  bottom:10rpx;
  left:35%;
  display: flex;
  align-content: center;
  width:200rpx;
  height:250rpx;
}
.addbt{
  display: flex;
  align-content: center;
  width:100rpx;
  height:150rpx;
  background-size: auto;
  background-repeat:no-repeat;
  background-color: transparent;
}
.bkimg{
  width:100rpx;
  height:100rpx;
  position: relative;
}
.top{
  position: relative;
  width:100%;
  height:5%;
  background-color:rgba(236, 227, 236, 0.973);
}
.topmove{
  display: flex;
  position: relative;
  width:100%;
  height:60rpx;
}
.topmove button{
  background-color: transparent;
  width: 20%;
  padding: 0;
  text-align: center;
  vertical-align: middle;
  font-size:auto;
  font-weight: 200;
  border-radius: 150rpx;
}
.container{
  /*任务面板*/
  position: relative;
  width:100%;
  height:95%;
}
.container swiper-item{
  width: 100%;
  height:100%;
  background-color:rgba(236, 227, 236, 0.973);
}

.doing{
  position: absolute;
  bottom: 50%;
  left:30%;
  font-weight: 500;
}
.undo{
  position: absolute;
  bottom:50%;
  left:30%;
  font-weight: 500;
}
.finished{
  position: absolute;
  bottom: 50%;
  left:30%;
  font-weight: 500;
}
.undo_Title{
  background-color:whitesmoke;
  display: flex;
  position: relative;
  width: 100%;
  height:130rpx;
  flex-wrap: wrap;
  flex-direction: column;
  border-bottom: ridge 1px white;
  margin-left:0rpx;
  margin-top:15rpx;
  
}
.title{
  margin-top: 10rpx;
  margin-left: 15rpx;
}
.newfile{
  background: rgba(236, 227, 236, 0.973);
  position:fixed;
  display: flexbox;
  width: 100%;
  height:95%;
  z-index: 999;
  padding: 10rpx 50rpx;
}
.input{
  width: 80%;
  height:60rpx;
  margin:20rpx 0;
  display: block;
  border:solid whitesmoke;
}
.pick{
  width:200rpx;
  font-size:35rpx;
  margin:20rpx 0  40rpx;
  border:solid 2px whitesmoke;
}
